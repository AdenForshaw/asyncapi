    "email": "fmvilas@gmail.com"
  },
  "contributors": [
    {
      "name": "Bruno Pedro",
      "email": "bpedro@hitchhq.com"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/asyncapi/asyncapi/issues"
  },
  "homepage": "https://github.com/asyncapi/asyncapi#readme",
  "devDependencies": {
    "handlebars": "^4.0.11",
    "js-yaml": "^3.7.0",
    "json-schema-ref-parser": "^3.1.2",
    "lodash": "^4.17.4",
    "mdv": "^1.0.5",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.11",
    "z-schema": "^3.18.2"
  }
}

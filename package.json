{
  "name": "asyncapi",
  "version": "1.0.0",
  "description": "AsyncAPI specification",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -w ./schema -w ./docs -w ./test -e js,md,yaml scripts/dev.js",
    "docs:dev": "nodemon -w ./schema -w ./docs -e md,yaml scripts/docs.js",
    "docs": "node scripts/docs.js",
    "dist": "node scripts/dist.js",
    "test:dev": "nodemon -w ./schema -w ./test/docs -e yaml --exec 'mocha -b test/index.js'",
    "test": "mocha -b test/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asyncapi/asyncapi.git"
  },
